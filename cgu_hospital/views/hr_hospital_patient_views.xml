<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="patient_list" model="ir.ui.view">
        <field name="name">Patients list</field>
        <field name="model">hr_hospital.patient</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="personal_doctor_id"/>
            </tree>
        </field>
    </record>

    <record id="patient_form" model="ir.ui.view">
        <field name="name">Patient form</field>
        <field name="model">hr_hospital.patient</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button
                                type="object"
                                name="open_list_visit_to_doctor"
                                icon="fa-usd">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Open List</span>
                                <span class="o_stat_text">visit_to_doctor</span>
                            </div>

                        </button>
                        <button
                                type="object"
                                name="open_list_personal_doctor_history"
                                icon="fa-usd">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Open List</span>
                                <span class="o_stat_text">personal_doctor_history</span>
                            </div>

                        </button>
                        <button
                                type="object"
                                name="open_list_diagnosis"
                                icon="fa-usd">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Open List</span>
                                <span class="o_stat_text">diagnosis</span>
                            </div>

                        </button>
                    </div>

                    <notebook>
                        <page string="Main">
                            <group>
                                <group>
                                    <field name="name"/>
                                    <field name="LastName"/>
                                    <field name="FirstName"/>
                                    <field name="Surname"/>
                                </group>
                                <group>
                                    <field name="passport_series"/>
                                    <field name="passport_number"/>
                                    <field name="passport_issued_when"/>
                                    <field name="passport_issued_whom"/>
                                </group>
                            </group>
                            <group>
                                <group>
                                    <field name="contact_person_id"/>
                                    <field name="personal_doctor_id"/>
                                    <field name="phone"/>
                                    <field name="email"/>
                                </group>
                                <group>
                                    <field name="date_birth"/>
                                    <field name="date_today"/>
                                    <field name="age"/>
                                    <field name="sex"/>
                                </group>
                            </group>
                        </page>
                        <page string="Personal Doctor changes history">
<!--                            <group>-->
                                <field name="personal_doctor_history_ids">

                                    <tree>
                                        <field name="date_medication"/>
                                        <field name="doctor_id"/>
                                        <field name="patient_id"/>
                                        <field name="sick_id"/>

                                    </tree>
                                </field>
<!--                            </group>-->
                        </page>
                        <page string="Visits to doctor">
<!--                            <group>-->
                                <field name="visit_to_doctor_ids"/>
<!--                            </group>-->
                        </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>


</odoo>