<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sick_search" model="ir.ui.view">
        <field name="name">sick.search</field>
        <field name="model">hr_hospital.sick</field>
        <field name="arch" type="xml">
            <search>
                <searchpanel view_types="tree,pivot">
                    <field name="sick_type_id" hierarchize="1" enable_counters="1"/>
<!--                    <field name="state" select="one" enable_counters="1"/>-->
                </searchpanel>

            </search>
        </field>
    </record>

    <!--●	Додати панель пошуку в хвороби, вибір типів зробити ієрархічним-->
    <record id="sick_list" model="ir.ui.view">
        <field name="name">sick list</field>
        <field name="model">hr_hospital.sick</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="sick_type_id"/>
                <field name="sick_type_color"/>
            </tree>
        </field>
    </record>


</odoo>