<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="research_search" model="ir.ui.view">
        <field name="name">research.search</field>
        <field name="model">hr_hospital.research</field>
        <field name="arch" type="xml">
            <search>
                <field name="doctor_name"/>
                <field name="doctor_phone"/>
                <field name="name"/>
                <filter name="sample_type_id" string="sample_type" context="{'group_by': 'sample_type_id'}"/>
            </search>
        </field>
    </record>

    <record id="research_list" model="ir.ui.view">
        <field name="name">research list</field>
        <field name="model">hr_hospital.research</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="patient_id"/>
                <field name="date_research"/>
                <field name="research_type_id"/>
                <field name="doctor_id"/>
                <field name="doctor_name"/>
                <field name="doctor_phone"/>

                <!--                <filter name="patient_phone" string="patient_phone"-->
                <!--                        domain="[('patient_id.phone','=',False)]"/>-->

                <!--                <field name="specialty"/>-->
            </tree>
        </field>
    </record>

    <!--    ●	Додати зведену таблицю аналізів -->
    <!--○	за лікарем у рядках -->
    <!--○	та типом у стовпчиках за поточний місяць-->

    <record id="research_pivot" model="ir.ui.view">
        <field name="name">research.pivot</field>
        <field name="model">hr_hospital.research</field>
        <field name="arch" type="xml">
            <pivot>
                <field name="doctor_id" type="row"/>
                <field name="date_research" interval="month" type="col"/>
                <field name="research_type_id"/>
                <!--                <field name="qty" type="measure"/>-->
            </pivot>
        </field>
    </record>


</odoo>