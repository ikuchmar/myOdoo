<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="diagnosis_list" model="ir.ui.view">
        <field name="name">diagnosis list</field>
        <field name="model">hr_hospital.diagnosis</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <!--                <field name="specialty"/>-->
            </tree>
        </field>
    </record>

    <!--    ○	в розрізі хвороб, типів хвороб в рядках, -->
    <!--○	року та місяця призначення в стовпчиках -->

    <record id="diagnosis_pivot" model="ir.ui.view">
        <field name="name">diagnosis.pivot</field>
        <field name="model">hr_hospital.diagnosis</field>
        <field name="arch" type="xml">
            <pivot>
                <field name="sick_id" type="row"/>
                <field name="sick_type" type="row"/>
                <field name="date_diagnosis" interval="year" type="col"/>
                <field name="date_diagnosis" interval="month" type="col"/>
                <!--                <field name="qty" type="measure"/>-->
            </pivot>
        </field>
    </record>

<!--●	Створити діаграму захворюваності, по типах хвороб, місяцях-->
    <record id="diagnosis_graph" model="ir.ui.view">
        <field name="name">diagnosis_pivot.graph</field>
        <field name="model">hr_hospital.diagnosis</field>
        <field name="arch" type="xml">
            <graph>
                <field name="sick_type"/>
                <field name="date_diagnosis" interval="month"/>
            </graph>
        </field>
    </record>


</odoo>