<?xml version="1.0" encoding="utf-8"?>
<odoo>

   <record id="sick_report_wizard_list" model="ir.ui.view">
        <field name="name">sick_report_wizard list</field>
        <field name="model">hr_hospital.sick.report.wizard</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sick_id"/>
                <field name="sick_qty"/>
                <field name="date_visit"/>
            </tree>
        </field>
    </record>

    <!--    menu binding to action-->
    <record id="action_sick_report_wizard" model="ir.actions.act_window">
        <field name="name">Sick report wizard</field>
        <field name="res_model">hr_hospital.sick.report.wizard</field>
        <field name="view_mode">tree</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_hr_hospital_doctor"/>
        <field name="binding_view_types">list</field>
        <field name="binding_type">report</field>
    </record>

    <record id="action_window_sick_report_wizard" model="ir.actions.act_window">
        <field name="name">set_doctor_wizard</field>
        <field name="res_model">hr_hospital.sick.report.wizard</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="hr_hospital.sick_report_wizard" name="sick_report_wizard" parent="hr_hospital.menu_root"
              action="hr_hospital.action_window_sick_report_wizard"/>

</odoo>
